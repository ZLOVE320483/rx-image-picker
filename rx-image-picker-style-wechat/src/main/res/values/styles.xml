<?xml version="1.0" encoding="utf-8"?>
<resources>

    //====================================== Theme Wechat ===========================================

    <style name="Wechat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wechat_primary</item>
        <item name="colorPrimaryDark">@color/wechat_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Wechat</item>
        <item name="album.dropdown.title.color">@color/wechat_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/wechat_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/wechat_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/wechat_album_empty_view</item>
        <item name="item.placeholder">@color/wechat_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/wechat_item_checkCircle_backgroundColor</item>
        <item name="item.checkCircle.borderColor">@color/wechat_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/wechat_page_bg</item>
        <item name="bottomToolbar.bg">@color/wechat_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/wechat_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/wechat_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">@color/wechat_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/wechat_preview_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Popup.Wechat</item>
        <item name="capture.textColor">@color/wechat_capture</item>
    </style>

    <style name="Toolbar.Wechat" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Popup.Wechat" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/wechat_album_popup_bg</item>
    </style>

</resources>